<Window x:Class="KPLAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPLAssistant"
        mc:Ignorable="d"
        Title="你的KPL助手" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        FontFamily="Microsoft YaHei UI"
        Foreground="#E0E0E0">

    <Window.Resources>
        <Color x:Key="AccentColor">#00FFFF</Color>
        <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#4A5A70"/>

        <Style x:Key="TechButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect x:Name="glowEffect" ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0" BlurRadius="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColorBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="15" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="#3300FFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TechGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="#331C212B" CornerRadius="4"/>
                            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1" Padding="8,5">
                                <TextBlock Text="{TemplateBinding Header}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource AccentColorBrush}"/>
                            </Border>
                            <Border Grid.Row="1" BorderBrush="Transparent" BorderThickness="0">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <DataTemplate x:Key="PodiumTemplate">
            <Grid Margin="5,5,5,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="#C0C0C0" BorderThickness="2" CornerRadius="5" Margin="5,20,5,5" Padding="5">
                    <Grid>
                        <StackPanel DataContext="{Binding TopThree[0]}" HorizontalAlignment="Center" Margin="0,0,0,25">
                            <Image Source="{Binding LogoPath}" Height="60" Margin="5"/>
                            <TextBlock Text="{Binding TeamName}" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Wins}" Foreground="Silver" FontWeight="Bold"/>
                                <TextBlock Text=" 胜" Foreground="Silver" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="2" FontSize="20" FontWeight="ExtraBold" Foreground="Silver" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                    </Grid>
                </Border>
                <Border Grid.Column="1" BorderBrush="Goldenrod" BorderThickness="3" CornerRadius="5" Margin="5,0,5,5" Padding="5">
                    <Grid>
                        <StackPanel DataContext="{Binding TopThree[1]}" HorizontalAlignment="Center" Margin="0,0,0,30">
                            <Image Source="{Binding LogoPath}" Height="80" Margin="5"/>
                            <TextBlock Text="{Binding TeamName}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Wins}" Foreground="Goldenrod" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text=" 胜" Foreground="Goldenrod" FontWeight="Bold" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="1" FontSize="24" FontWeight="ExtraBold" Foreground="Goldenrod" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                    </Grid>
                </Border>
                <Border Grid.Column="2" BorderBrush="#CD7F32" BorderThickness="2" CornerRadius="5" Margin="5,30,5,5" Padding="5">
                    <Grid>
                        <StackPanel DataContext="{Binding TopThree[2]}" HorizontalAlignment="Center" Margin="0,0,0,25">
                            <Image Source="{Binding LogoPath}" Height="50" Margin="5"/>
                            <TextBlock Text="{Binding TeamName}" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Wins}" Foreground="#CD7F32" FontWeight="Bold"/>
                                <TextBlock Text=" 胜" Foreground="#CD7F32" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="3" FontSize="20" FontWeight="ExtraBold" Foreground="#CD7F32" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,8"/>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="RegularRowTemplate">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Rank}" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0" Foreground="White"/>
                <TextBlock Grid.Column="1" Text="{Binding TeamName}" VerticalAlignment="Center" Foreground="White"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Wins}" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" 胜" Foreground="White"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <local:LeaderboardTemplateSelector x:Key="MyTemplateSelector"
                                           PodiumTemplate="{StaticResource PodiumTemplate}"
                                           RegularRowTemplate="{StaticResource RegularRowTemplate}"/>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#1C212B" Offset="0"/>
            <GradientStop Color="#12151C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock Text="KPL助手" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center" Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0.8" BlurRadius="10"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Style="{StaticResource TechButtonStyle}" x:Name="BtnTeamInfo" Content="各只战队信息" Click="BtnTeamInfo_Click"/>
                <Button Style="{StaticResource TechButtonStyle}" x:Name="BtnTeamStats" Content="各只战队比赛数据" Click="BtnTeamStats_Click"/>
                <Button Style="{StaticResource TechButtonStyle}" x:Name="BtnHeroData" Content="各战队常禁用/常选择英雄" Click="BtnHeroData_Click"/>
                <Button Style="{StaticResource TechButtonStyle}" x:Name="BtnLaneStats" Content="各个位置常选择/高胜率英雄" Click="BtnLaneHeroStats_Click"/>
                <Button Style="{StaticResource TechButtonStyle}" x:Name="BtnLineupSimulator" Content="阵容模拟和AI解说" Click="BtnLineupSimulator_Click"/>
            </StackPanel>
            <TextBlock Grid.Row="1" Text="制作人：WBW" Margin="5" Opacity="0.5" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
        </Grid>

        <Grid Grid.Column="1">
            <Image Source="C:\Users\lenovo\Desktop\暑期课\大作业\其它图片\背景.png" 
                   Stretch="UniformToFill" Opacity="0.1" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1.5*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="战队胜场排行榜" Style="{StaticResource TechGroupBoxStyle}" Margin="0,0,0,5">
                    <ListView x:Name="ListViewTeamRankings" ItemTemplateSelector="{StaticResource MyTemplateSelector}" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" SelectionMode="Single">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </GroupBox>
                <GroupBox Grid.Row="1" Header="虎扑热帖 (王者荣耀)" Style="{StaticResource TechGroupBoxStyle}" Margin="0,5,0,5">
                    <ListView x:Name="ListViewHupuPosts" Background="Transparent" BorderThickness="0" ItemContainerStyle="{StaticResource TextItemStyle}"/>
                </GroupBox>
                <GroupBox Grid.Row="2" Header="近期赛果" Style="{StaticResource TechGroupBoxStyle}" Margin="0,5,0,0">
                    <ListView x:Name="ListViewRecentMatches" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#4A5A70" BorderThickness="0,0,0,1" Padding="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding MatchDate}" Foreground="#AAAAAA" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding MatchTime}" Foreground="#AAAAAA"/>
                                        </StackPanel>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding TeamAName}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                                <Image Source="{Binding TeamALogo}" Width="40" Height="40" Margin="10,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                                <TextBlock Text="{Binding MatchState}" FontSize="12" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding TeamAScore}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                                    <TextBlock Text=" : " FontSize="20" FontWeight="Bold" Foreground="White"/>
                                                    <TextBlock Text="{Binding TeamBScore}" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">
                                                <Image Source="{Binding TeamBLogo}" Width="40" Height="40" Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding TeamBName}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </GroupBox>
            </Grid>

            <Image Source="C:\Users\lenovo\Desktop\暑期课\大作业\其它图片\kpl.jpg"
                   HorizontalAlignment="Right" VerticalAlignment="Bottom"
                   Margin="0,0,20,20" Height="60" Opacity="0.7"/>
        </Grid>
    </Grid>
</Window>