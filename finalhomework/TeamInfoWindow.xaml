<Window x:Class="KPLAssistant.TeamInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPLAssistant"
        mc:Ignorable="d"
        Title="战队信息查询" Height="600" Width="950"
        WindowStartupLocation="CenterScreen"
        FontFamily="Microsoft YaHei UI"
        Foreground="#E0E0E0">

    <Window.Resources>
        <Color x:Key="AccentColor">#00FFFF</Color>
        <SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="BorderColorBrush" Color="#4A5A70"/>

        <Style x:Key="TechButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="3">
                            <Border.Effect>
                                <DropShadowEffect x:Name="glowEffect" ShadowDepth="0" Color="{StaticResource AccentColor}" Opacity="0" BlurRadius="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentColorBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="15" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect" Storyboard.TargetProperty="BlurRadius" To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="#3300FFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TechGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="#331C212B" CornerRadius="4"/>
                            <Border Grid.Row="0" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="0,0,0,1" Padding="8,5">
                                <TextBlock Text="{TemplateBinding Header}" FontWeight="Bold" FontSize="16" Foreground="{StaticResource AccentColorBrush}"/>
                            </Border>
                            <Border Grid.Row="1" BorderBrush="Transparent" BorderThickness="0">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#1C212B" Offset="0"/>
            <GradientStop Color="#12151C" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,15,0">
            <Label Content="选择战队:" FontWeight="Bold" Foreground="White"/>
            <ComboBox x:Name="TeamComboBox" SelectionChanged="TeamComboBox_SelectionChanged" Margin="0,0,0,10"/>
            <Label Content="战队Logo:" FontWeight="Bold" Foreground="White"/>
            <Border BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Height="180" Margin="0,0,0,20">
                <Image x:Name="LogoImage" Stretch="Uniform"/>
            </Border>
            <Button x:Name="QueryButton" Content="点击查询" Style="{StaticResource TechButtonStyle}" Click="QueryButton_Click"/>
        </StackPanel>

        <GroupBox Grid.Column="1" Header="战队数据详情" Style="{StaticResource TechGroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="{StaticResource BorderColorBrush}" BorderThickness="1" Width="250" Margin="10">
                    <Image x:Name="InfoImage" Stretch="Uniform"/>
                </Border>
                <Grid Grid.Column="1" Margin="10" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="当前排名: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="总场次: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="胜场: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="胜率: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="场均KDA: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="场均击杀: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="场均死亡: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="场均助攻: " FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="8" Grid.Column="0" Text="分均经济: " FontWeight="Bold" Margin="5"/>

                    <TextBlock x:Name="RankingText" Grid.Row="0" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="MatchesText" Grid.Row="1" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="WinsText" Grid.Row="2" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="WinRateText" Grid.Row="3" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="KdaText" Grid.Row="4" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="KillsText" Grid.Row="5" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="DeathsText" Grid.Row="6" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="AssistsText" Grid.Row="7" Grid.Column="1" Margin="5" Text="-"/>
                    <TextBlock x:Name="EconomyText" Grid.Row="8" Grid.Column="1" Margin="5" Text="-"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>